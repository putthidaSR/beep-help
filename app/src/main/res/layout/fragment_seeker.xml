<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeekerFragment">

    <TableRow
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:padding="5dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seeker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:drawableTop="@drawable/start"
            android:backgroundTint="@android:color/transparent"
            android:paddingTop="10dp"
            android:textColor="@color/primaryPurple"
            android:text="\nSeeking\nfor help\n"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stopSeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:drawableTop="@drawable/stop"
            android:text="\nStop\nSeeking\n"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@android:color/transparent"
            android:paddingTop="10dp"
            android:textColor="@color/primaryPurple"
            android:layout_gravity="right"/>
    </TableRow>

    <TextView
        android:id="@+id/log_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Results:"
        android:textSize="15dp"
        android:layout_below="@+id/table" />

    <TextView
        android:id="@+id/textview_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C6C3C3"
        android:scrollbars="vertical"
        android:gravity="center"
        android:layout_below="@+id/log_label" />

</RelativeLayout>